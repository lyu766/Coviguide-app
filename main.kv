#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#: import ScrollEffect kivy.effects.scroll.ScrollEffect


<RootElement>:
    orientation: 'vertical'
    MyNavigator:
        id: navigator
        Home:
            name: 'home'
        Video_player_screen:
            name: 'video_player'
        Config:
            name: 'config'
        Reports:
            name: 'reports'
    MyNavBar:
        size_hint_y: None
        Button:
            text: 'Home'
            font_size: '25'
            background_color: (0.5, 1, 0, 0.5)
            on_release:
                root.ids.navigator.transition = RiseInTransition(duration=0.2)
                root.ids.navigator.current = 'home'
            Image:
                source: 'images/home.png'
                y: self.parent.y + self.parent.height - 100
                x: self.parent.x
        Button:
            text: '    Videos'
            font_size: '25'
            background_color: (0.5, 1, 0, 0.5)
            on_release: 
                root.ids.navigator.transition = RiseInTransition(duration=0.2)
                root.ids.navigator.current = 'video_player'
            Image:
                source: 'images/video_play.png'
                y: self.parent.y + self.parent.height - 100
                x: self.parent.x
        Button:
            text: '   Settings'
            font_size: '25'
            background_color: (0.5, 1, 0, 0.5)
            on_release: 
                root.ids.navigator.transition = RiseInTransition(duration=0.2)
                root.ids.navigator.current = 'config'
            Image:
                source: 'images/config.png'
                y: self.parent.y + self.parent.height - 100
                x: self.parent.x
        Button:
            text: '   Reports'
            font_size: '25'
            background_color: (0.5, 1, 0, 0.5)
            on_release:
                root.ids.navigator.transition = RiseInTransition(duration=0.2)
                root.ids.navigator.current = 'reports'
            Image:
                source: 'images/report.png'
                y: self.parent.y + self.parent.height - 100
                x: self.parent.x

<Home>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 0.5, 0.5
            Rectangle:
                pos:self.pos
                size:self.size
    	orientation: 'vertical'
        Label:
            text: '   Welcome to \n COVID-19 guide.'
            font_size: '40sp'
            bold:  True
            color: [0,1.0,0,1.0]


<Video_player_screen>:
    canvas.before:
        Color:
        	rgba: .94,1,.9, 1
        Rectangle:
        	pos: 0,0
        	size: self.size

    ScrollView:
        size_hint_y: .95
        #scroll_type: ['bars']
        #effect_cls: ScrollEffect #avoid overscrolling
        pos_hint: {'x':0, 'y': 0}
    	do_scroll_x: False
    	do_scroll_y: True

    	GridLayout:
    		size:(root.width, 4160)
    		size_hint_x: None
    		size_hint_y: None
    		cols: 1
    		height: self.minimum_height
    		row_default_height: 300
    		row_force_default: True
    		Carousel:
    			direction: 'right'

    			AsyncImage:
    				source: 'IntroductionbyWaiYininEnglish.png'

    		AnchorLayout:
